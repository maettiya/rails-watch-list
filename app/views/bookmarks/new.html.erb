<div class="bookmark-new-page">
  <div class="bookmark-header">
    <h1>Add a Movie</h1>
    <p>to “<%= @list.name %>”</p>
    <div class="back-button-wrapper">
      <%= link_to "← Back to “#{@list.name}”", list_path(@list), class: "button button--outline back-button" %>
    </div>
  </div>
  <div class="bookmark-form-card">
    <%= form_with model: [@list, @bookmark], local: true do |f| %>
      <div class="form-group">
        <%= f.label :movie_id, "Select Movie", class: "form-label" %>
        <%= f.collection_select :movie_id, Movie.all, :id, :title, {}, class: "form-select-custom" %>
      </div>
      <div class="form-group">
        <%= f.label :comment, "Comment", class: "form-label" %>
        <%= f.text_area :comment, class: "form-textarea", placeholder: "Why are you adding this movie?" %>
      </div>
      <div class="form-actions">
        <%= f.submit "Add Movie", class: "button button--outline" %>
      </div>
    <% end %>
  </div>
</div>
